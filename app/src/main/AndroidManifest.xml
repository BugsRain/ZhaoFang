<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ichengxi.fang">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".business.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".business.list.ListHouseActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_list_house"
            android:launchMode="singleTop" />

        <activity android:name=".business.house_detail.HouseDetailActivity"/>
        <activity android:name=".business.login.LoginActivity"/>
        <activity android:name=".business.location.LocationActivity" />
        <activity android:name=".TempActivity"/>
        <activity android:name=".business.collect.CollectionActivity"/>
        <activity android:name=".business.about.AboutActivity"/>
        <activity android:name=".business.feedback.FeedbackActivity"/>
        <activity android:name=".business.setting.SettingActivity"/>
        <activity android:name=".business.calc.CalcActivity"/>
        <activity android:name=".business.buy.SaleHouseActivity"/>
        <activity android:name=".business.publish.PublishHouseActivity"/>
        <activity android:name=".business.report.ReportActivity"/>
        <activity android:name=".business.search.SearchActivity"/>
    </application>

</manifest>

