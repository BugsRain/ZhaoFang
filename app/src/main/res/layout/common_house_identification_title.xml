<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/partition_big">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:drawableStart="@mipmap/ico_attention"
        android:drawableLeft="@mipmap/ico_attention"
        android:text="举报房源"
        android:drawablePadding="@dimen/partition_small"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="房源已经认证"
        android:textColor="@color/green1"
        android:gravity="center"
        android:drawableStart="@mipmap/ico_identification"
        android:drawableLeft="@mipmap/ico_identification"
        android:paddingTop="@dimen/partition_small"
        android:paddingBottom="@dimen/partition_small"
        android:paddingLeft="@dimen/partition_normal"
        android:paddingRight="@dimen/partition_normal"
        android:background="@drawable/house_identification"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:drawablePadding="@dimen/partition_small"/>
</RelativeLayout>