<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/home_header">
    <chengxinet.chengxilibs.widget.MySimpleDraweeView
        android:id="@+id/home_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/home_actionBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/green1"
        android:alpha="0.0"/>
    <TextView
        android:id="@+id/home_location"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/home_location_bg"
        android:text="location"
        android:gravity="center"
        android:textSize="@dimen/textSize_large"
        android:textColor="@android:color/white"
        android:drawableStart="@mipmap/ico_location"
        android:drawableLeft="@mipmap/ico_location"
        android:paddingStart="@dimen/partition_normal"
        android:paddingEnd="@dimen/partition_normal"
        android:layout_margin="@dimen/partition_normal"
    />



    <TextView
        android:id="@+id/home_search"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:drawableLeft="@mipmap/ico_search"
        android:drawableStart="@mipmap/ico_search"
        android:background="@drawable/home_search_bg"
        android:paddingTop="@dimen/partition_small"
        android:paddingBottom="@dimen/partition_small"
        android:paddingLeft="@dimen/partition_big"
        android:paddingRight="@dimen/partition_big"
        android:drawablePadding="@dimen/partition_small"
        android:gravity="center_vertical"
        android:hint="搜索小区，地段"
        android:lines="1"

        android:layout_marginBottom="@dimen/partition_big"
        android:layout_marginRight="@dimen/partition_very_large"
        android:layout_marginLeft="@dimen/partition_very_large"
        android:textSize="@dimen/textSize_big"
        android:textColorHint="@color/grey2"
        android:layout_gravity="bottom"
        />
</FrameLayout>