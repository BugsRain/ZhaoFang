<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTab">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/tag</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">@dimen/partition_small</item>
    </style>
    
    <style name="MainTabFocus" parent="MainTab">
        <item name="android:textColor">@color/green1</item>
    </style>
</resources>
