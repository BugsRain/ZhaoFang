<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <declare-styleable name="PictureTableView">
        <attr name="spec" format="dimension" />
    </declare-styleable>

    <style name="MainTab">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/tag</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">@dimen/partition_small</item>
    </style>
    
    <style name="MainTabFocus" parent="MainTab">
        <item name="android:textColor">@color/green1</item>
    </style>
    
    <style name="HomeSaleBuy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/textSize_normal_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font1</item>
        <item name="android:paddingLeft">@dimen/partition_normal</item>
        <item name="android:paddingRight">@dimen/partition_large</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/partition_big</item>
    </style>

    <style name="HomeFunction">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/partition_big</item>
        <item name="android:textColor">@color/font1</item>
        <item name="android:textSize">@dimen/partition_normal2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="HouseDetailBottomTab">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:drawablePadding">@dimen/partition_very_small</item>-->
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:paddingTop">@dimen/partition_very_small</item>
        <item name="android:paddingBottom">@dimen/partition_very_small</item>
        <item name="android:paddingRight">@dimen/partition_normal</item>
        <item name="android:paddingLeft">@dimen/partition_normal</item>
    </style>
    <style name="houseInfoFirstTag">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <!--<item name="android:paddingTop">@dimen/partition_very_small</item>-->
        <!--<item name="android:paddingBottom">@dimen/partition_very_small</item>-->
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <style name="houseInfoTag" parent="@style/houseInfoFirstTag">
        <item name="android:layout_marginLeft">@dimen/partition_small</item>
    </style>
    <style name="TranslucentTheme" parent="AppTheme">
    </style>

    <style name="popupWindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="searchMore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font1</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="searchMoreTitle" parent="searchMore">
        <item name="android:layout_marginTop">@dimen/partition_normal</item>
        <item name="android:layout_marginBottom">@dimen/partition_normal</item>
    </style>

    <style name="reportStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/partition_normal2</item>
        <item name="android:background">@drawable/item_style</item>
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="searchMoreItem" parent="searchMore">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_item</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/bg</item>
    </style>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>
