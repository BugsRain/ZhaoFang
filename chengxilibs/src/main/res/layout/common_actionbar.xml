<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    app:layout_collapseMode="parallax"
    app:layout_scrollFlags="scroll|enterAlways"
    android:clickable="true"
    android:tag="actionBar">

    <View
        android:id="@+id/actionBar_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green1"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/actionBar_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/partition_normal"
        android:gravity="center"
        android:paddingLeft="@dimen/partition_big"
        android:paddingRight="@dimen/partition_big"
        android:text="left"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_big"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/actionBar_center_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxWidth="280dp"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="title"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:textSize="@dimen/textSize_large" />

    <cn.bingoogolapple.badgeview.BGABadgeTextView
        android:id="@+id/actionBar_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/partition_normal"
        android:gravity="center"
        android:paddingEnd="@dimen/partition_big"
        android:paddingLeft="@dimen/partition_normal"
        android:paddingRight="@dimen/partition_big"
        android:paddingStart="@dimen/partition_normal"
        android:text="right"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_big"
        android:visibility="invisible"
        app:badge_gravity="rightTop"
        app:badge_horizontalMargin="10dp"
        app:badge_verticalMargin="10dp"/>

    <cn.bingoogolapple.badgeview.BGABadgeTextView
        android:id="@+id/actionBar_right2_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/actionBar_right_txt"
        android:drawablePadding="@dimen/partition_normal"
        android:gravity="center"
        android:paddingEnd="@dimen/partition_normal"
        android:paddingLeft="@dimen/partition_normal"
        android:paddingRight="@dimen/partition_normal"
        android:paddingStart="@dimen/partition_normal"
        android:text="right2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_big"
        android:visibility="invisible" />
</RelativeLayout>

